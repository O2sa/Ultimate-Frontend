.setting-box.hide-setting
    .toggle-setting
        i.fa-regular.fa-envelope.fa-xl
    .setting-content
        .option-box.color-options.text-center
            h4.option-title Color Options
            - var themes = ["green-theme","blue-theme","red-theme","orange-theme","orange-theme","purple-theme","black-theme"]
            ul.list-unstyled
                each theme in themes 
                    li(data-theme=theme)
        .option-box.text-center.font-options
            h4.option-title Font Options
            - var fonts = ["open", "ubuntu", "roboto", "source"]
            select.form-control.text-center
                each font in fonts 
                    option(value=font)=font + ' Font'
        .option-box.text-center
            h4.option-title Backgrounds Options
